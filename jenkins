pipeline {
  agent any

  stages {

    stage('Install') {
      steps {
        echo 'Install dependencies'
        sleep 3
      }
    }

    stage('Build') {
      steps {
        echo 'Build'
        sleep 2
      }
    }

    stage('Test') {
      steps {
        echo 'Test'
        sleep 3
        exit 1
      }
    }

    stage('Publish') {
      steps {
        echo 'Publish Artefact on Registery'
        sleep 1
      }
    }
  }
}
